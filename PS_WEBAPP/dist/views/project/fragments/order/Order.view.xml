<mvc:View
	controllerName="epta.ps.views.project.fragments.order.Order"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:e="epta.ps.ui5.m"
	height="100%">
	
    <e:Table
		id="prgTable"
		mode="None"
		fixedLayout="true"
		growing="true"
		growingThreshold="1000"
		growingScrollToLoad="true"
		sticky="ColumnHeaders"
		items="{
			path: 'OrderEOS>/',
			sorter: [{
				path: 'Wbselement', 
				descending: false
			}]
		}">
        <e:columns>
            <!-- col1 -->
            <Column width="1rem">
                <Text text="" />
            </Column>
            <!-- col2 -->
            <Column width="10rem">
                <Text text="{i18n>tblWBE}" />
            </Column>
            <!-- col3 -->
            <Column width="10rem">
                <Text text="{i18n>tblWBEDescription}" />
            </Column>
            <!-- col4 -->
            <Column width="7rem">
                <Text text="{i18n>tblVbeln}" />
            </Column>
            <!-- col5 -->
            <Column width="7rem">
                <Text text="{i18n>tblPosnr}" />
            </Column>
            <!-- col6 -->
            <Column width="7rem">
                <Text text="{i18n>tblMatnr}" />
            </Column>
            <!-- col7 -->
            <Column width="7rem">
                <Text text="{i18n>tblMaktx}" />
            </Column>
            <!-- col8 -->
            <Column width="7rem">
                <Text text="{i18n>tblAbgru}" />
            </Column>
            <!-- col9 -->
            <Column width="7rem">
                <Text text="{i18n>tblErdat}" />
            </Column>
            <!-- col10 -->
            <Column width="7rem">
                <Text text="{i18n>tblEdatu}" />
            </Column>
            <!-- col11 -->
            <Column width="7rem">
                <Text text="{i18n>tblLifsk}" />
            </Column>
            <!-- col12 -->
            <Column width="7rem">
                <Text text="{i18n>tblVstel}" />
            </Column>
            <!-- col13 -->
            <Column width="7rem">
                <Text text="{i18n>tblErnam}" />
            </Column>
            <!-- col14 -->
            <Column width="7rem">
                <Text text="{i18n>tblVbfaVbeln}" />
            </Column>
            <!-- col15 -->
            <Column width="7rem">
                <Text text="{i18n>tblVbfaPosnn}" />
            </Column>
            <!-- col16 -->
            <Column width="7rem">
                <Text text="{i18n>tblWadatIst}" />
            </Column>
        </e:columns>
        <e:items>
            <ColumnListItem>
                <cells>
                    <!-- col1 -->
                    <Text text="{OrderEOS>Wbselementhierarchylevel}"/>
                    <!-- col2 -->
                    <Text text="{OrderEOS>Wbselement}"/>
                    <!-- col3 -->
                    <Text text="{OrderEOS>Wbsdescription}"/>
                    <!-- col4 -->
                    <Text text="{OrderEOS>Vbeln}"/>
                    <!-- col5 -->
                    <Text text="{OrderEOS>Posnr}" />
                    <!-- col6 -->
                    <Text text="{OrderEOS>Matnr}" />
                    <!-- col7 -->
                    <Text text="{OrderEOS>Maktx}" />
                    <!-- col8 -->
                    <Text text="{OrderEOS>Abgru}" />
                    <!-- col9 -->
                    <Text text="{
						path: 'OrderEOS>Erdat',
						type: 'sap.ui.model.type.Date',
						formatOptions: {
							pattern: 'dd/MM/yyyy'
						}
					}" />
                    <!-- col10 -->
                    <Text text="{
						path: 'OrderEOS>Edatu',
						type: 'sap.ui.model.type.Date',
						formatOptions: {
							pattern: 'dd/MM/yyyy'
						}
					}" />
                    <!-- col11 -->
                    <Text text="{OrderEOS>Lifsk}" />
                    <!-- col12 -->
                    <Text text="{OrderEOS>Vstel}" />
                    <!-- col13 -->
                    <Text text="{OrderEOS>Ernam}" />
                    <!-- col14 -->
                    <Text text="{OrderEOS>VbfaVbeln}" />
                    <!-- col15 -->
                    <Text text="{OrderEOS>VbfaPosnn}" />
                    <!-- col16 -->
					<Text text="{
						path: 'OrderEOS>WadatIst',
						type: 'sap.ui.model.type.Date',
						formatOptions: {
							pattern: 'dd/MM/yyyy'
						}
					}" />
                </cells>
            </ColumnListItem>
        </e:items>
    </e:Table>
</mvc:View>