<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml">
	<Dialog id="DialogVariant" afterClose="onAfterClose" contentWidth="10%" contentHeight="30%" class="sapUiSizeCozy" showHeader="false">
		<Page title="{i18n>SaveVariant}" width="100%">
			<content>
				<HBox alignItems="Center" alignContent="Center" justifyContent="Center" height="100%" width="100%">
					<Label text="{i18n>Variant}:" class="sapUiTinyMarginEnd"></Label>
					<Input id="VariantName" value=""/>
				</HBox>
			</content>
			<footer>
				<Toolbar>
					<ToolbarSpacer/>
					<Button icon="sap-icon://save" text="{i18n>SaveVar}" press="onSaveVariant"/>
					<Button icon="sap-icon://decline" text="{i18n>btAccept}" press="onCloseVariant"/>
				</Toolbar>
			</footer>
		</Page>
	</Dialog>
</core:FragmentDefinition>